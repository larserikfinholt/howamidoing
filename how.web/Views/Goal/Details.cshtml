@model how.web.Models.Goal


@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>Goal</legend>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.UserName)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.UserName)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Title)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Title)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Interval)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Interval)
    </div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>


<h3>DoneIt's</h3>


<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DoneIts[0].Goal.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DoneIts[0].Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DoneIts[0].Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DoneIts[0].Comment)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.DoneIts) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Goal.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Comment)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
